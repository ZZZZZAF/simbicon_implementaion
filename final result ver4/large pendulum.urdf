<?xml version="1.0"?>
<robot name="large pendulum skeleton">
    <link name="world" />
	
	<link name="pendulum_pole_link">
        <inertial>
            <mass value="500.0" />
            <origin xyz="0 0 -2" rpy="0 0 0" />
            <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1" />
        </inertial> 
 
        <visual>
            <origin xyz="0 0 -2" rpy="0 0 0" />
            <geometry>
                <box size="0.05 0.05 4" />
            </geometry>
			<material
			name="">
			<color
			  rgba="0.5 0.3 0.9" />
		  </material>
        </visual>
        
        <collision group="default">
            <origisn xyz="0 0 -2" rpy="0 0 0" />
            <geometry>
                 <box size="0.05 0.05 4" />
            </geometry>
        </collision>
    </link>
	
    <joint name="pendulum_pole_joint" type="revolute">
		<origin xyz="27.5 -5 6" rpy="0 0.2 0" />
        <parent link="world" />
        <child link="pendulum_pole_link" />
		<axis xyz="0 1 0" />
		<dynamics damping="0.0" friction="0.0"/>
		<limit
		  lower="1000"
		  upper="1000"
		  effort="1000"
		  velocity="1000" />
    </joint>
	
    <link name="pendulum_ball_link">
        <inertial>
            <mass value="1000" />
            <origin xyz="0 0 0" rpy="0 0 0" />
            <inertia ixx="1.0" ixy="0" ixz="0" iyy="1.0" iyz="0" izz="1.0" />
        </inertial>
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <sphere radius="0.8" />
            </geometry>
			<material 
			name="">
			<color
			  rgba="0 0.3 0.7 1" />
		  </material>
        </visual>
        <collision group="default">
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <sphere radius="0.8" />
            </geometry>
        </collision>
    </link>
    
    <joint name="pendulum_ball_joint" type="fixed">
        <origin xyz="0 0 -4.5" rpy="0 0 0" />
        <parent link="pendulum_pole_link" />
        <child link="pendulum_ball_link" />
    </joint>
    
</robot>

